set-environment -g PATH "/usr/local/bin:/bin:/usr/bin"

# Change the prefix key from ctrl-b to ctrl-s
unbind C-b
set -g prefix C-s
# On double ctrl-s we send it to the running process
# bind-key -r C-s send-prefix

# Use ctrl-s + r to source the config file
bind-key r source-file ~/.tmux.conf \; display-message "~/.tmux.conf reloaded"

# Bind splits, the -n flag indicates we dont want to use the prefix
bind-key -n C-h select-pane -L
bind-key -n C-j select-pane -D
bind-key -n C-k select-pane -U
bind-key -n C-l select-pane -R

# Use the entire 256 color range with tmux
set-option -g default-terminal "screen-256color"

# Plugins
set -g @plugin 'arcticicestudio/nord-tmux

# Initialize TMUX plugin manager (keep this line at the very bottom of tmux.conf)
run -b '~/.tmux/plugins/tpm/tpm'
